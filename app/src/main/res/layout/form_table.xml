<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/table_edit_name"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:hint="@string/txtTableName"
        android:importantForAutofill="no"
        android:inputType="text"

        tools:layout_editor_absoluteX="123dp" />

    <Spinner
        android:id="@+id/table_spinner_zone"
        android:layout_width="288dp"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/txtTableName"
        app:layout_constraintEnd_toStartOf="@+id/table_edit_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="14dp" />

    <TextView
        android:id="@+id/lblZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/txtZone"
        app:layout_constraintEnd_toStartOf="@+id/table_spinner_zone"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="49dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="0.29927006" />

</androidx.constraintlayout.widget.ConstraintLayout>