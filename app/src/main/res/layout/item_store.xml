<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/margin_32dp"
    android:layout_marginEnd="@dimen/margin_32dp"
    android:layout_marginBottom="@dimen/margin_32dp">

    <ImageView
        android:id="@+id/imgStoreImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/img_store" />

    <TextView
        android:id="@+id/lblStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32dp"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"

        tools:text="Cà phê số 8"

        app:layout_constraintBottom_toTopOf="@+id/lblStoreAddress"
        app:layout_constraintStart_toEndOf="@+id/imgStoreImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblStoreAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:scrollHorizontally="true"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/lblStoreName"
        app:layout_constraintTop_toBottomOf="@+id/lblStoreName"
        tools:text="Đường 442, Tăng Nhơn Phú A, Quận 9" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:contentDescription="@string/btn_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>