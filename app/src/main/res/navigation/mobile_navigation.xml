<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/tableListFragment">
    <fragment
        android:id="@+id/categoryListFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.category.CategoryListFragment"
        android:label="@string/label_category_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/categoryViewAction"
            app:destination="@id/categoryViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment" />
        <action
            android:id="@+id/action_loginFragment_to_unitListFragment"
            app:destination="@id/unitListFragment" />
        <action
            android:id="@+id/action_loginFragment_to_zoneListFragment"
            app:destination="@id/zoneListFragment" />
        <action
            android:id="@+id/action_loginFragment_to_userListFragment"
            app:destination="@id/userListFragment" />
    </fragment>
    <fragment
        android:id="@+id/unitListFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.unit.UnitListFragment"
        android:label="Đơn vị"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/unitViewAction"
            app:destination="@id/unitViewFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/zoneListFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.zone.ZoneListFragment"
        android:label="@string/label_zone_list" >
        <action
            android:id="@+id/zoneViewAction"
            app:destination="@id/zoneViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/zoneViewFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.zone.ZoneViewFragment"
        android:label="ZoneViewFragment" >
        <argument
            android:name="zoneId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <argument android:defaultValue='""'
        android:name="zoneId" />
    <fragment
        android:id="@+id/unitViewFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.unit.UnitViewFragment"
        android:label="{title}">
        <argument
            android:name="unitId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/categoryViewFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.category.CategoryViewFragment"
        android:label="CategoryViewFragment" >
        <argument
            android:name="categoryId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/tableListFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.table.TableListFragment"
        android:label="Bàn">
        <action
            android:id="@+id/tableViewAction"
            app:destination="@id/tableViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/tableViewFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.table.TableViewFragment"
        android:label="{title}" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="tableId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/userListFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.user.UserListFragment"
        android:label="UserListFragment" >
        <action
            android:id="@+id/userViewAction"
            app:destination="@id/userViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/userViewFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.user.UserViewFragment"
        android:label="UserViewFragment" >
        <argument
            android:name="userId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/tableListWaiterFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.table.TableListWaiterFragment"
        android:label="Bàn">
        <action
            android:id="@+id/tableOrderViewAction"
            app:destination="@id/tableOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/tableOrderFragment"
        android:name="fit.tdc.edu.vn.cafemanagement.fragment.table_order.TableOrderWaiterFragment"
        android:label="{title}">
        <argument
            android:name="tableId?"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>